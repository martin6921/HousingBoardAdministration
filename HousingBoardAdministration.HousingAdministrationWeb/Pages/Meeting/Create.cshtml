@page
@model HousingBoardAdministration.HousingAdministrationWeb.Pages.Meeting.CreateModel
@{
}
<h2>Opret møde</h2>

<div class="row">
    <div class="col-md-6">
        <form method="post" enctype="multipart/form-data">
            <div class="form-floating mb-3">
                <input asp-for="MeetingModel.Title" class="form-control" aria-required="true"/>
                <label asp-for="MeetingModel.Title">Titel</label>
                <span asp-validation-for="MeetingModel.Title" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <textarea asp-for="MeetingModel.Description" class="form-control" aria-required="true"></textarea>
                <label asp-for="MeetingModel.Description">Beskrivelse</label>
                <span asp-validation-for="MeetingModel.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="MeetingType">Møde type</label>
                <select asp-for="SelectedMeetingType" asp-items="Model.MeetingTypeSelectList" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="MeetingModel.MeetingTime"></label>
                <input asp-for="MeetingModel.MeetingTime" class="form-control" />
                <span asp-validation-for="MeetingModel.MeetingTime" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="MeetingModel.AddressLocation" class="form-control" aria-required="true" />
                <label asp-for="MeetingModel.AddressLocation">Lokation</label>
                <span asp-validation-for="MeetingModel.AddressLocation" class="text-danger"></span>
            </div>
            <button type="submit">Opret møde</button>
        </form>
    </div>
</div>


