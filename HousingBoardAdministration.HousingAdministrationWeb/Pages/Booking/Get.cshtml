@page
@model HousingBoardAdministration.HousingAdministrationWeb.Pages.Booking.GetModel
@{
}
<div class="row">
    <div class="col-md-6">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group row">
                <label for="BookingModel.StartDate" class="col-sm-2 col-form-label">Start dato:</label>
                <div class="col-sm-10">
                    <input type="text" readonly class="form-control-plaintext" value="@Model.BookingModel.StartDate">
                </div>
            </div>
            <div class="form-group row">
                <label for="BookingModel.EndDate" class="col-sm-2 col-form-label">Slut dato:</label>
                <div class="col-sm-10">
                    <input type="text" readonly class="form-control-plaintext" value="@Model.BookingModel.EndDate">
                </div>
            </div>
            <h2>Resourser:</h2>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>                        
                        <th>Beskrivelse</th>
                        <th>Specifikation</th>
                        <th>Pris</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var resource in Model.BookingModel.Resources)
                    {
                        <tr>
                            <td>@resource.Description</td>
                            <td>@resource.Specification</td>
                            <td>@resource.Price</td>
                        </tr>
                    }
                </tbody>
            </table>
            <a asp-page="Index" class="btn btn-primary">Tilbage</a>
        </form>
    </div>
</div>