@page
@model HousingBoardAdministration.HousingAdministrationWeb.Pages.Booking.CreateModel
@{
}
<h2>Opret en booking</h2>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div class="form-group">
                <label for="Resource">Vælg ressource:</label>
                <select asp-for="Booking.ResourceId" asp-items="Model.ResourceSelectList" class="form-control"></select>
            </div>
            <div class="form-group">
                <label for="StartDate">Start dato:</label>
                <input asp-for="Booking.StartDate" type="datetime-local" class="form-control" />
                <span asp-validation-for="Booking.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="EndDate">Slut dato:</label>
                <input asp-for="Booking.EndDate" type="datetime-local" class="form-control" />
                <span asp-validation-for="Booking.EndDate" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Book ressource</button>
        </form>
    </div>
</div>