@page
@model HousingBoardAdministration.HousingAdministrationWeb.Pages.HousingBoard.BoardMember.GetModel
@{
}
<h2>Visning af bestyrelsesmedlem</h2>
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <input type="hidden" asp-for="BoardMemberViewModel.Id" class="form-control" />
            <div class="form-group row">
                <label for="BoardMemberViewModel.UserName" class="col-sm-2 col-form-label">Brugernavn:</label>
                <div class="col-sm-10">
                    <input type="text" readonly class="form-control-plaintext" value="@Model.BoardMemberViewModel.UserName">
                </div>
            </div>
            <div class="form-group row">
                <label for="BoardMemberViewModel.FirstName" class="col-sm-2 col-form-label">Fornavn:</label>
                <div class="col-sm-10">
                    <input type="text" readonly class="form-control-plaintext" value="@Model.BoardMemberViewModel.FirstName">
                </div>
            </div>
            <div class="form-group row">
                <label for="BoardMemberViewModel.LastName" class="col-sm-2 col-form-label">Efternavn:</label>
                <div class="col-sm-10">
                    <input type="text" readonly class="form-control-plaintext" value="@Model.BoardMemberViewModel.LastName">
                </div>
            </div>
            <div class="form-group row">
                <label for="BoardMemberViewModel.AddressLocation" class="col-sm-2 col-form-label">Adresse:</label>
                <div class="col-sm-10">
                    <input type="text" readonly class="form-control-plaintext" value="@Model.BoardMemberViewModel.ResidentAddress">
                </div>
            </div>SS
            <table class="table">
                <thead>
                    <tr>
                        <th>Bestyrelsesrolle</th>
                        <th>Start dato</th>
                        <th>Slut dato</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model.BoardMemberViewModel.BoardMemberRoles)
                    {
                        <tr>
                            <td>@role.Role.RoleName</td>
                            <td>@role.StartDate</td>
                            <td>@role.EndDate</td>
                        </tr>
                    }
                </tbody>
            </table>
        </form>
    </div>
</div>