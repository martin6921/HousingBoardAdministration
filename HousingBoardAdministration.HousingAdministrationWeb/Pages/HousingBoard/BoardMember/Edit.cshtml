@page
@model HousingBoardAdministration.HousingAdministrationWeb.Pages.HousingBoard.BoardMember.EditModel
@{
}
<link rel="stylesheet" href="~/css/styles.css" />

<h2>Rediger bestyrelsesmedlem</h2>
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <input type="hidden" asp-for="BoardMemberViewModel.Id" class="form-control" />
            <input type="hidden" asp-for="BoardMemberViewModel.RowVersion" class="form-control" />
            <input type="hidden" asp-for="BoardMemberViewModel.BoardMemberRoleId" class="form-control" />

            <div class="form-group">
                <label for="MeetingType">Fornavn:</label>
                <input asp-for="BoardMemberViewModel.FirstName" class="form-control" />
                <span asp-validation-for="BoardMemberViewModel.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="MeetingType">Efternavn:</label>
                <input asp-for="BoardMemberViewModel.LastName" class="form-control" />
                <span asp-validation-for="BoardMemberViewModel.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="MeetingType">Adresse:</label>
                <input asp-for="BoardMemberViewModel.ResidentAddress" class="form-control" />
                <span asp-validation-for="BoardMemberViewModel.ResidentAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="MeetingType">Bestyrelsesrolle:</label>
                <select asp-for="SelectedRoleType" asp-items="Model.RoleSelectList" class="form-control"></select>
            </div>
            <button type="submit" class="btn btn-primary">Opdater medlem</button>
        </form>
    </div>
</div>